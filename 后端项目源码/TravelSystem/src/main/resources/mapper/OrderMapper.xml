	<!-- 多表联查获取订单列表（包含景点和门票信息） -->
	<select id="selectOrderWithAttractionAndTicket" resultType="java.util.Map">
		SELECT
			o.id,
			o.order_no as orderNo,
			o.user_id as userId,
			o.ticket_id as ticketId,
			o.quantity,
			o.total_amount as totalAmount,
			o.status,
			o.contact_name as contactName,
			o.contact_phone as contactPhone,
			o.visit_date as visitDate,
			o.remark,
			o.created_at as createdAt,
			o.updated_at as updatedAt,
			a.id as attractionId,
			a.name as attractionName,
			a.image_url as attractionImageUrl,
			a.city as attractionCity,
			a.province as attractionProvince,
			a.rating as attractionRating,
			a.description as attractionDescription,
			t.ticket_type as ticketType,
			t.price as ticketPrice,
			t.discount_price as ticketDiscountPrice,
			t.description as ticketDescription,
			t.stock as ticketStock
		FROM t_order o
		LEFT JOIN t_ticket t ON o.ticket_id = t.id
		LEFT JOIN t_attraction a ON t.attraction_id = a.id
		<where>
			<if test="param.userId != null">
				AND o.user_id = #{param.userId}
			</if>
			<if test="param.orderNo != null and param.orderNo != ''">
				AND o.order_no LIKE CONCAT('%', #{param.orderNo}, '%')
			</if>
			<if test="param.status != null and param.status != ''">
				AND o.status = #{param.status}
			</if>
			<if test="param.contactName != null and param.contactName != ''">
				AND o.contact_name LIKE CONCAT('%', #{param.contactName}, '%')
			</if>
			<if test="param.startTime != null and param.startTime != ''">
				AND o.created_at >= #{param.startTime}
			</if>
			<if test="param.endTime != null and param.endTime != ''">
				AND o.created_at &lt;= #{param.endTime}
			</if>
		</where>
		ORDER BY o.created_at DESC
	</select>

