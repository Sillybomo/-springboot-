	<!--扩展查询条件-->
	<sql id="base_query_condition_extend">
		<if test="query.usernameFuzzy != null and query.usernameFuzzy != ''">
			and username
			like concat('%',#{query.usernameFuzzy},'%')
		</if>
		<if test="query.passwordFuzzy != null and query.passwordFuzzy != ''">
			and password
			like concat('%',#{query.passwordFuzzy},'%')
		</if>
		<if test="query.nameFuzzy != null and query.nameFuzzy != ''">
			and name
			like concat('%',#{query.nameFuzzy},'%')
		</if>
		<if test="query.emailFuzzy != null and query.emailFuzzy != ''">
			and email
			like concat('%',#{query.emailFuzzy},'%')
		</if>
		<if test="query.phoneFuzzy != null and query.phoneFuzzy != ''">
			and phone
			like concat('%',#{query.phoneFuzzy},'%')
		</if>
		<if test="query.addressFuzzy != null and query.addressFuzzy != ''">
